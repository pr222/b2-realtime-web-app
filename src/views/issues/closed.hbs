<h1>Closed issues</h1>

{{#if viewData.issues.length}}
    {{#each viewData.issues}}
      <section>
        <img src="{{avatar}}" alt="User Avatar" height="50"></img>
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <button id="openButton"><a href="./{{iid}}/open/">Open</a></button>
      </section>
    {{/each}}
{{else}}
    <p>No closed issues...</p>
{{/if}}


{{!-- Template for the client to use  --}}
<template id="issue-template">
    <img src="\{{this.avatar}}" alt="User Avatar" height="50"></img>
    <h2>\{{this.title}}</h2>
    <p>\{{this.description}}</p>
    <button id="removeButton"><a href="./\{{this.iid}}/remove/">Close</a></button>
</template>