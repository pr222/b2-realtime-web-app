<h1>Closed issues</h1>

<div id="closedIssues">
  <div id="sectionsWrapper">
    {{#if viewData.issues.length}}
        {{#each viewData.issues}}
          <section id="issue_{{this.iid}}">
            <img src="{{avatar}}" alt="User Avatar" height="50"></img>
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            <form action="./update/reopen/{{this.iid}}" method="POST">
              <input type="submit" value="Open">
            </form>
          </section>
        {{/each}}
    {{/if}}
  </div>
</div>

{{!-- Template for the client to use  --}}
<template id="issue-template">
    <img src="\{{this.avatar}}" alt="User Avatar" height="50"></img>
    <h2>\{{this.title}}</h2>
    <p>\{{this.description}}</p>
    <form action="./update/reopen/\{{this.iid}}" method="POST">
      <input type="submit" value="Open">
    </form>
</template>